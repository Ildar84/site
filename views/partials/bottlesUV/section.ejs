<% products.forEach(function(product) { %>
  <div class="container">
    <div class="row">
      <div class="product__image col-md-4 col-sm-12">
        <img src="img/daylight/<%= product.mainImage %>" alt="<%= product.name %>">
      </div>
      <div class="product__wrapper col-sm-8">
        <article class="product__article">
          <div class="sprite-window">
            <img class="<%= product.logoImage %>" src="img/materialProp.png" alt="logo <%= product.logoImage %>">
          </div>
          <h2 class="product__caption"><%= product.name %></h2>
          <p class="product__text"><%= product.description %></p>
        </article>
        <div class="specifications-wrapper">
          <h2 class="caption">свойства</h2>
          <ul class="row specifications-list">
            <li class="col-sm-2">Твердость</li>
            <li class="col-sm-10" data-stars-lighted="<%= product.properties.hardness %>">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </li>
            <li class="col-sm-12"><hr></li>
            <li class="col-sm-2">Гибкость</li>
            <li class="col-sm-10" data-stars-lighted="<%= product.properties.flexibility %>">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </li>
            <li class="col-sm-12"><hr></li>
            <li class="col-sm-2">Цвета</li>
            <li class="col-sm-3">
              <% product.colors.forEach(function(color){ 
                  if(color == "") {%>
                    <i class="fa fa-circle-thin"></i>
                  <% } else { %>
                <i class="fa fa-circle color-<%= color %>"></i>
              <% }} ) %>
              <p class="footnote">* All colours are not available in every type</p>
            </li>
            <li class="col-sm-2">
              <figure>
                <img src="img/daylight/waterWhasable.png" alt="water washable">
                <figcaption>Водостойкий</figcaption>
              </figure>
            </li>
          </ul>
        </div>
        <div class="purchase">
          <h3>цена</h3>
          <p class='purchase__price'><%= product.price %> $</p>
          <p><%= product.weight %> кг</p>
          <button class="btn" data-id="<%= product._id %>">Купить</button>
          <p><strong>Внимание: </strong><%= product.note %></p>
        </div>

      </div>
    </div>
  </div> 
  <hr>
<% }) %>
