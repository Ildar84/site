<div class="cart animated fadeInRight">
    <i class="fa fa-times-circle"></i>
    <span class="hint animated flipInX">Close window</span>
<% if(cart.totalQty < 1) {%>
  <div class="row">
    <div class="col-xs-12">В корзине нет товаров</div>
  </div>
  <% } else { %>
    <% for(key in cart.items) {%>
      <div class="row">
        <ul class="cart__item">
          <li class="cart__item-name col-md-5 col-xs-12"><%= cart.items[key].item %></li>
          <li class="cart__item-qty col-md-3 col-xs-6">
            <div class="hint-pos">
              <i class="fa fa-minus-square"></i>
              <span class="hint animated flipInX">Deduct one</span>
            </div>
              <input type="number" value="<%= cart.items[key].qty %>" min="1" max="99">
              <div class="hint-pos">
                <i class="fa fa-plus-square"></i>
                <span class="hint animated flipInX">Add one</span>
              </div>
          </li>
          <li class="cart__item-price col-md-2 col-xs-4"><%= cart.items[key].price %><span>$</span></li>
          <li class="cart__item-del col-md-2 col-xs-2">
            <button class="product-delete" data-id="<%= key %>"><i class="fa fa-ban"></i><span class='hint animated flipInX'>Remove item</span></button>
          </li>
        </ul>
      </div>
      <hr>
    <% } %>
    <div class="row">
      <ul class="cart__footer">
        <li class="col-md-5 col-xs-12"><p>Сумма:<span id="cart__totalPrice"><%= cart.totalPrice %></span>$</p></li>
        <li class="col-md-2 col-xs-4"><button class="cart-refresh animated wobble infinite"><i class="fa fa-save"> </i><span class="hint animated flipInX">Save</span></button></li>
        <li class="col-md-offset-2 col-md-1"><button class="cart-clear"><i class="fa fa-trash-o"></i><span class="hint animated flipInX">Clear cart</span></button></li>
        <li class="col-md-offset-1 col-md-1"><button class="send-order"><i class="fa fa-paper-plane"></i><span class="hint animated flipInX">Send order</span></button></li>
      </ul>
    </div>
  <% } %>

  <i id="totalQty" hidden><%= cart.totalQty %></i>
</div>
